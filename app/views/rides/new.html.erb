<div class="form-wrapper">
  <%= form_for @ride  do |f| %>
      <h2>New Ride</h2>
      <%= f.text_field :origin, :placeholder => 'Start address' %>
      <%= f.text_field :destination, :placeholder => 'Destination address' %>
      <%= f.collection_select :taxi_id, @taxi_providers, :id, :name %>
      <label for="price">Price,&nbsp;â‚¬</label>
      <%= f.number_field :price, type: 'float' %>
      <%= f.submit "Add Ride", :class => "form-btn" %>
  <% end %>
</div>